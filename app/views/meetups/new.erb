<h1>Create a New Meetup</h1>

<form method="post" action="/meetups">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= @title %>"/><br><br>
  <label for="location">Location:</label>
  <select name="location">
    <option value="Mercury">Mercury</option>
    <option value="Venus">Venus</option>
    <option value="Earth">Earth</option>
    <option value="Mars">Mars</option>
    <option value="Jupiter">Jupiter</option>
    <option value="Saturn">Saturn</option>
    <option value="Uranus">Uranus</option>
    <option value="Neptune">Neptune</option>
    <option value="Pluto">Pluto</option>
  </select><br><br>
  <label for="meetup_date">Date of meetup:</label>
  <input type="date" name="meetup_date" id="meetup_date" value="<%= @meetup_date %>"/><br><br>
  <label for="description">Description:</label>
  <input type="text" name="description" id="description" value="<%= @description %>"/>

  <input type="submit" value="Submit" />
</form>
